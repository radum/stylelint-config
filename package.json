{
  "name": "@radum/stylelint-config",
  "type": "module",
  "version": "7.3.1",
  "packageManager": "pnpm@9.14.3",
  "description": "@radum Stylelint Shareable Config",
  "author": "Radu Micu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/radum/stylelint-config.git"
  },
  "keywords": [
    "stylelint",
    "stylelint-config"
  ],
  "exports": {
    ".": {
      "import": "./src/index.js"
    }
  },
  "main": "./src/index.js",
  "files": [
    "CHANGELOG.md",
    "LICENSE.md",
    "README.md",
    "src"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "lint:js": "eslint '**/*.js'",
    "test": "vitest",
    "prepare": "husky"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "stylelint": "^16.11.0"
  },
  "dependencies": {
    "@stylistic/stylelint-plugin": "^3.1.1",
    "postcss-scss": "^4.0.9",
    "stylelint-no-unsupported-browser-features": "^8.0.2",
    "stylelint-order": "^6.0.4",
    "stylelint-scss": "^6.10.0"
  },
  "devDependencies": {
    "@auto-it/all-contributors": "^11.3.0",
    "@auto-it/first-time-contributor": "^11.3.0",
    "@auto-it/npm": "^11.3.0",
    "@auto-it/released": "^11.3.0",
    "@radum/eslint-config": "^8.1.0",
    "@stylelint-types/stylelint-order": "^6.0.4",
    "@stylelint-types/stylelint-scss": "^6.5.0",
    "@stylelint-types/stylelint-stylistic": "^3.0.1",
    "auto": "^11.3.0",
    "eslint": "^9.15.0",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "stylelint": "^16.11.0",
    "stylelint-define-config": "^1.7.0",
    "vitest": "^2.1.6"
  },
  "lint-staged": {
    "*": "eslint --flag unstable_ts_config --fix"
  }
}
