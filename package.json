{
  "name": "@radum/stylelint-config",
  "type": "module",
  "version": "7.4.0",
  "packageManager": "pnpm@10.8.0",
  "description": "@radum Stylelint Shareable Config",
  "author": "Radu Micu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/radum/stylelint-config.git"
  },
  "keywords": [
    "stylelint",
    "stylelint-config"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.js",
  "files": [
    "CHANGELOG.md",
    "LICENSE.md",
    "README.md",
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsup --format esm,cjs --clean --dts",
    "lint:js": "eslint '**/*.js'",
    "prepack": "pnpm build",
    "test": "vitest",
    "prepare": "husky"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "stylelint": "^16.11.0"
  },
  "dependencies": {
    "@stylistic/stylelint-plugin": "^3.1.2",
    "postcss-scss": "^4.0.9",
    "stylelint-no-unsupported-browser-features": "^8.0.4",
    "stylelint-order": "^6.0.4",
    "stylelint-scss": "^6.11.1"
  },
  "devDependencies": {
    "@auto-it/all-contributors": "^11.3.0",
    "@auto-it/first-time-contributor": "^11.3.0",
    "@auto-it/npm": "^11.3.0",
    "@auto-it/released": "^11.3.0",
    "@radum/eslint-config": "^10.0.0",
    "@stylelint-types/stylelint-order": "^6.0.4",
    "@stylelint-types/stylelint-scss": "^6.5.0",
    "@stylelint-types/stylelint-stylistic": "^3.1.1",
    "auto": "^11.3.0",
    "eslint": "^9.24.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "stylelint": "^16.18.0",
    "stylelint-define-config": "^16.17.0",
    "tinyglobby": "^0.2.12",
    "tsup": "^8.4.0",
    "vitest": "^3.1.1"
  },
  "lint-staged": {
    "*": "eslint --flag unstable_ts_config --fix"
  }
}
